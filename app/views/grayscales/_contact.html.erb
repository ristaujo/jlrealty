<hr class="featurette-divider">
<div id="contact" class="contactfeat"></div>
<%= form_for @message, url: create_message_url do |f| %>
<%= notice %>
<%= @message.errors.full_messages.join(', ') %>
      <div class="container ">
          <div class="row">
              <div class="col-md-8 col-md-offset-2 m-auto">
                  <div class="jumbotron thirdjumbo">
                      <div class="container display-3 text-center contactjumbo">
                          <h1>Contact</h1>
                      </div>
                  </div> 
                  <div class="contact-form text-center">
                      <p class="hint-text">Let's find your next home! Please fill out the information below and I will contact you for a free consultation. </p>
                      <form action="/examples/actions/confirmation.php" method="post">           
                          <div class="form-group">
                              <label for="inputFirstName">Name</label>
                              <%= f.text_field :name, class: "form-control", id:"inputName" %>
                          </div>                                  
                          <div class="form-group">
                              <label for="inputEmail">Email Address</label>
                              <%= f.email_field :email, class: "form-control", id:"inputEmail"  %>
                          </div>
                          <div class="form-group">
                              <label for="inputPhone">Phone Number</label>
                              <%= f.telephone_field :phone, class: "form-control" %>
                          </div>
                          <div class="form-group">
                              <label for="inputMessage">Message</label>
                              <%= f.text_area :body, class: "form-control", id:"inputMessage", rows: "5" %>
                          </div>
                          <%= f.submit type="submit", class: "btn btn-primary", value: "Submit"%>
                      </form>
                  </div>
              </div>
          </div>
      </div>
<% end %>
      







